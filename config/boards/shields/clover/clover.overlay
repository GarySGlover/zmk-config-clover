/ {
    chosen {
        zmk,kscan = &kscan0;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-direct";
        label = "KSCAN";

        input-gpios =
            <&gpio 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)
            &gpio 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)
            &gpio 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)
            &gpio 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)
            >;
    };
};